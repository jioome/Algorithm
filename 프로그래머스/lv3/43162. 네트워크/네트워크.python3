def dfs(n,start,computers,visited):
    visited[start] = 1
    for i in range(n) :
        if visited[i] == 0 and computers[start][i] == 1 : 
            dfs(n,i,computers,visited)

def solution(n, computers):
    answer = 0
    visited = [0]*n
    for i in range(n):
        if visited[i] == 0 : 
            answer +=1
            dfs(n,i,computers,visited)
    return answer